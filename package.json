{
  "name": "aracom-keybase-api-downloader",
  "version": "1.0.0",
  "description": "Aracommunications custom file downloader",
  "main": "main.js",
  "scripts": {
    "test": "echo 'Error: no test specified' && exit 1",
    "start": "electron .",
		"build": "electron-packager . apidownloader",
		"deploy": "electron-builder --win nsis:ia32",
    "build:osx": "electron-builder --mac",
    "build:linux": "npm run build:linux32 && npm run build:linux64",
    "build:linux32": "build --linux --ia32",
    "build:linux64": "build --linux --x64",
    "build:win": "npm run build:win32 && npm run build:win64",
    "build:win32": "build --win --ia32",
    "build:win64": "build --win --x64"
	},
  "repository": "https://github.com/bikebiker/ara-api-file-downloader",
  "keywords": [
    "Aracommunication",
    "downloader",
    "custom"
  ],
  "author": "bikebiker",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-packager": "^15.2.0"
  },
  "dependencies": {
    "easydl": "^1.0.1",
    "express": "^4.17.1",
    "request": "^2.88.2"
  },
  "build": {
    "productName": "ApiDownloader",
    "appId": "kr.co.aracomm.ApiDownloader",
    "asar": true,
    "protocols": {
      "name": "ApiDownloader",
      "schemes": [
        "apidownloader"
      ]
		},
		"mac": {
			"target": [
				"default"
			],
			"icon": "./resources/installer/Icon.icns"
		}, 
		"dmg": {
			"title": "ApiDownloader",
			"icon": "./resources/installer/Icon.icns"
		},
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./resources/installer/Icon.ico"
		},
    "linux": { 
      "target": [
        "AppImage", 
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ],
      "icon": "./resources/linuxicon"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./dist/",
      "app": "."
    }
  }
}
